<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NightAdjusted.Theme.NoActionBarTheme" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.AllApis" parent="NightAdjusted.Theme.NoActionBarTheme" />

    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.AllApis</item>
    </style>
</resources>